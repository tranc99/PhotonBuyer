.form-wrapper
  = simple_form_for @post, html: { class: 'form-horizontal',multipart: true } do |f|    .form-group      = f.input :image    .form-group.text-center      = f.input :caption, input_html: { style: "width:400px"}    .form-group.text-center      = f.button :submit, class: 'btn-success'
